<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
	    <referenceBlock name="alothemes_header">
            <block class="Magento\Framework\View\Element\Html\Links" name="header.customlinks">
                <block class="Magento\Framework\View\Element\Template" name="catalog.compare.link" before="-"
                       template="Magento_Catalog::product/compare/link.phtml">
                    <arguments>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="compareProducts" xsi:type="array">
                                    <item name="component" xsi:type="string">Magento_Catalog/js/view/compare-products</item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
                 <block class="Magento\Framework\View\Element\Html\Link\Current" name="checkout">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Checkout</argument>
                        <argument name="path" xsi:type="string">checkout</argument>
                    </arguments>
                </block> 
            </block>
            <block class="Magento\Customer\Block\Account\Navigation" name="top.links2">
                <arguments>
                    <argument name="css_class" xsi:type="string">header2 links2</argument>
                </arguments>
            </block>
		</referenceBlock>
        <referenceContainer name="footer-container">
            <container name="footer-top" label="Footer Top" htmlTag="div" htmlClass="block-footer-top" before="-">
                <block class="Magento\Cms\Block\Block" name="block_footer_top">
                    <arguments>
                        <argument name="block_id" xsi:type="string">ft-funiture3</argument>
                    </arguments>
                </block>
            </container>            
        </referenceContainer>

        <referenceBlock name="top.links2">
            <block class="Magento\Customer\Block\Account\Link" name="my-account-link2">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Account</argument>
                    <argument name="sortOrder" xsi:type="number">110</argument>
                </arguments>
            </block>
            <block class="Magento\Wishlist\Block\Link" name="wish-list-link2">
				<arguments>
					<argument name="label" xsi:type="string" translate="true">My Wish List</argument>
					<argument name="class" xsi:type="string">top-link-mywishlist</argument>
				</arguments>
			</block>
            <block class="Magento\Customer\Block\Account\RegisterLink" name="register-link2">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Register</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\AuthorizationLink" name="authorization-link2"
                   template="Magento_Customer::account/link/authorization.phtml"/>
        </referenceBlock>

        <!-- <referenceBlock name="header.container" remove="false"/>
        <referenceBlock name="header.panel" remove="false"/> -->
        <referenceBlock name="store.links" remove="false"/>
        <!-- <referenceBlock name="top.links" remove="false"/> -->
    </body>
</page>
